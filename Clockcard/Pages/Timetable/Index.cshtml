@page
@model Clockcard.Pages.Timetable.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Employee Timetables</h1>
@{
    @*Stops employee from seeing create*@
    if (Model.role.Equals("3"))
    {
        <p>
            <a asp-page="Create" style="color: #924091"><b><h3>New Employee Timetable</h3></b></a>
        </p>
    }
}

<table class="table" style="color: #924091">

    <thead>
        <tr>
            <th>
                <h3>@Html.DisplayNameFor(model => model.Timeline[0].EMPREF)</h3>

            </th>
            <th>
                <h3>@Html.DisplayNameFor(model => model.TimelineVMList[0].Name)</h3>

            </th>

            <th></th>
        </tr>
    </thead>
    <tbody style="color:white">
        @foreach (var item in Model.TimelineVMList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    <a asp-page="./Details" asp-route-id="@item.ID"style="color: #924091"><b>Details</b></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <a href="~/Secured" style="color: #924091"><h3><b>Main Menu</b></h3></a>
</div>
