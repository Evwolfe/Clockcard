                            {
                                string role = System.Text.Encoding.UTF8.GetString(roleSession);
                                <a class="navbar-brand" asp-area="" asp-page="/Secured"><img class="mb-4" src="~/img/Clockcard.png" alt="" width="57" height="57" style="padding:.5em"></a>
                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                        aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <li class="nav-item">
                                    <h4><b><a class="nav-link text-dark" style="padding: 1em" asp-page="/ClockCard/index">Clock in</a></b></h4>
                                </li>
                                <li class="nav-item align-content-center">
                                    <h4><b><a class="nav-link text-dark" style="padding: 1em" asp-area="" asp-page="/Employeedetail/index">Employee Details</a></b></h4>
                                </li>
                                <li class="nav-item">
                                    <h4><b><a class="nav-link text-dark" style="padding: 1em" asp-area="" asp-page="/Timetable/index">TimeTable</a></b></h4>
                                </li>

                                <li class="nav-item">
                                    <h4><b><a class="nav-link text-dark" style="padding: 1em" asp-area="" asp-page="/Logout">Log Out</a></b></h4>
                                </li>

                            }
                        }


                        @*    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-page="/Employeedetail/index">Log</a>
        </li>*@

