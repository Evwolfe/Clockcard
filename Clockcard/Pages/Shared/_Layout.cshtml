<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clockcard</title>
    <link rel="icon" href="img/Clockcard.png" sizes="32x32" type="image/png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Stylesheets", required: false)
    <script src="@Url.Content("~/js/timetable.js")"></script>
</head>
<body style="background-color: #e600e6; Color: white">
