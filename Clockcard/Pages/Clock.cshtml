@page
@model Clockcard.Pages.ClockModel

@{
    ViewData["Title"] = "Clock";
}

<h1>Clock</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Clock[0].EMPREF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clock[0].STARTTIME)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clock[0].ENDTIME)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Clock) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EMPREF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.STARTTIME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ENDTIME)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
