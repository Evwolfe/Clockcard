@page
@model Clockcard.Pages.IndexModel
@{
}
<div style = "text-align:center">
    <section>
        <form id="account" class="cancel" method="post">
            <img class="mb-4" src="img/Clockcard.png" alt="" width="180" height="180">
            <hr />
            <h1 style="color: #924091">Clockcard</h1>
            <div class="form-group">
                <h4><b><label asp-for="Input.Username"></label></b></h4>
                <input asp-for="Input.Username" class="form-control">

            </div>
            <div class="form-group">
                <h4>
                    <b>
                        <label asp-for="Input.Password"></label>
                    </b>
                </h4>
                <input type="password" asp-for="Input.Password" class="form-control" />

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="background-color: #924090; color: white">Log in</button>
            </div>
        </form>
    </section>
</div>
