        @*div style="background-color:purple !important;"*@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @*No Role no Menu *@
                        @{
                            var roleSession = new Byte[20];
                            bool HasRole = Context.Session.TryGetValue("Role", out roleSession);
                            if (HasRole)
                            {
                                string role = System.Text.Encoding.UTF8.GetString(roleSession);
                                <a class="navbar-brand" asp-area="" asp-page="/Secured"><img class="mb-4" src="~/img/Clockcard.png" alt="" width="57" height="57"></a>
                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                        aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/ClockCard/index">Clock in</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Timetable/index">TimeTable</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Employeedetail/index">Employee Details</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Logout">Log Out</a>
                                </li>

                            }
                        }


                        @*    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-page="/Employeedetail/index">Log</a>
        </li>*@

