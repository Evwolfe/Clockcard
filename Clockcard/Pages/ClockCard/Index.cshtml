@page
@model Clockcard.Pages.ClockCard.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Employee Clockcard</h1>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Clock[0].EMPREF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClockVMList[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clock[0].STARTTIME)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clock[0].ENDTIME)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ClockVMList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.STARTTIME)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ENDTIME)
                </td>
                <td>
                    @{   @* used to stop the employees from seeing the edit and delete*@

                        if (Model.role.Equals("2") || Model.role.Equals("3"))
                        {
                            <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                            @*<a asp-page="./Details" asp-route-id="@item.ID">Details</a> |*@
                            <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                        }
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
<td>
    <a href="~/Secured">Main Menu</a>
</td>